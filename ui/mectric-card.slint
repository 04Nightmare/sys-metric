import { HorizontalBox, VerticalBox } from "std-widgets.slint";
export component MetricCard inherits Rectangle {
    in property <string> title: "Metric";
    in property <string> value: "0%";
    in property <float> percentage: 0.0;
    in property <color> accent-color: #3b82f6;
    background: #1e293b;
    border-radius: 25px;
    drop-shadow-blur: 20px;
    drop-shadow-color: #00000040;
    VerticalBox {
        padding: 20px;
        spacing: 16px;
        Text {
            text: title;
            font-size: 14px;
            color: #94a3b8;
            font-weight: 600;
        }

        HorizontalBox {
            alignment: center;
            Text {
                text: value;
                font-size: 32px;
                color: #f1f5f9;
                font-weight: 700;
            }
        }

        Rectangle {
            height: 8px;
            background: #334155;
            border-radius: 4px;
            Rectangle {
                width: parent.width * percentage / 100;
                height: parent.height;
                background: accent-color;
                border-radius: 4px;
            }
        }
    }
}
